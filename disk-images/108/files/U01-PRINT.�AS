10 REM JUSTIFIED FILE PRINT
INPUT"FILE TO BE PRINTED?";G$
FILNAM$=G$+".JUS"
FILE FILNAM$
30 INPUT"PRINTER OR SCREEN?";IN$
TST$=LEFT$(IN$,1)
IF TST$="P" THEN PRINT CHR$(16)
IF END#1 THEN 100
FOR I=1 TO 2 STEP 0
READ#1;LINE$
PRINT LINE$
NEXT
100 CLOSE 1
IF TST$="P" THEN PRINT CHR$(16)
INPUT"MORE TO PRINT?";IN$
TST$=LEFT$(IN$,1)
IF TST$="Y" THEN 10
END
